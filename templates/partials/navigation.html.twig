<ul id="sidebar-list">
  {% for page in taxonomy.findTaxonomy({'category':'platform'}) %}
    <a href="{{ page.url }}"><li{% if page.active or page.activeChild %} class="selected"{% endif %}>{{ page.title }}</li></a>
  {% endfor %}
</ul>

<ul class="sort-buttons">
  {% for page in taxonomy.findTaxonomy({'category':'lowerNav'}) %}
  <a href="{{ page.url }}"><li><i class="fas {{ page.header.custom.icon }}"></i></li></a>
  {% endfor %}
</ul>
